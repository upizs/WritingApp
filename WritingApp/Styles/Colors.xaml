<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WritingApp">

    <!--Background colors-->
    <Color x:Key="LightYellow">#ffedbf</Color>
    <SolidColorBrush x:Key="LightYellowBrush" Color="{StaticResource LightYellow}"/>

    <Color x:Key="WarmYellow">#ffcd74</Color>
    <SolidColorBrush x:Key="WarmYellowBrush" Color="{StaticResource WarmYellow}"/>

    <Color x:Key="WarmOrange">#ff7251</Color>
    <SolidColorBrush x:Key="WarmOrangeBrush" Color="{StaticResource WarmOrange}"/>

    <Color x:Key="DarkWarmLillac">#9b2948</Color>
    <SolidColorBrush x:Key="DarkWarmLillacBrush" Color="{StaticResource DarkWarmLillac}"/>

    <!--Foreground colors-->

    <Color x:Key="ForegroundDark">#0E2431</Color>
    <SolidColorBrush x:Key="ForegroundDarkBrush" Color="{StaticResource ForegroundDark}"/>

    <Color x:Key="ForegroundLight">#f6f6f6</Color>
    <SolidColorBrush x:Key="ForegroundLightBrush" Color="{StaticResource ForegroundLight}"/>




</ResourceDictionary>